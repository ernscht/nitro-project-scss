<div class="container">
	{{pattern name='heading' tag='h1'}}
	{{pattern name='example'}}
	{{#pattern name='box'}}
		<h3>{{pattern name='icon' icon='nitro'}}&nbsp;Nitro example patterns</h3>
		{{pattern name='button'}}
	{{/pattern}}
	{{pattern name='box' modifier='dark'}}
	{{pattern name='cta'}}
	<style>
		.box {
			outline: 0.5vw solid lightcoral;
			width: 50vw;
			margin: 0 auto;
			position: relative;
		}
	</style>
	{{#pattern name='box'}}
		{{pattern name='loader'}}
	{{/pattern}}

	<div class="box">{{pattern name='image'}}</div>
</div>
